<div>
    <form action="/realTimeProducts" id="productForm" method="post" enctype="application/x-www-form-urlencoded">
        <legend>Agregar Productos</legend>
        <div>
            <label>Titulo: </label>
            <input type="text" id="productTitle" name="title">
        </div>
        <div>
            <label>Descripcion: </label>
            <input type="text" id="productDescription" name="description">
        </div>
        <div>
            <label>Precio: </label>
            <input type="number" id="productPrice" name="price">
        </div>
        <div>
            <label>Imagen: </label>
            <input type="text" id="productThumbnail" name="thumbnail">
        </div>
        <div>
            <label>Codigo: </label>
            <input type="text" id="productCode" name="code">
        </div>
        <div>
            <label>Estado: </label>
            <label>Verdadero: </label>
            <input type="radio" name="status" value="true">
            <label>Falso: </label>
            <input type="radio" name="status" value="false">
        </div>
        <div>
            <label>Stock: </label>
            <input type="number" name="stock">
        </div>
        <button type="submit">Agregar</button>
    </form>
</div>


<div>
    {{#each prducts}}

    <div id="productsFeed">
        <h3> {{title}} </h3>
            <img src=" {{thumbnail}} " alt="imagen de {{title}} ">
            <div>
                <p> {{description}} </p>
                <p>Precio: {{price}} </p>
                <p>Stock: {{stock}} </p>
                <p>Codigo: {{code}} </p> 
            </div>
    </div>
    {{/each}}
</div> 